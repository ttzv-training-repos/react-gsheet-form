{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier", "react", "react-hooks", "simple-import-sort"],
    "rules": {
        "prettier/prettier": [
            "warn",
            {
              "endOfLine": "auto",
              "trailingComma": "none",
              "singleQuotes": true,
              "semi": false
            }
          ],
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error",
        "no-unused-vars": "warn",
        "react/prop-types": "warn"
    }
}
